generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-movie"
}

datasource db {
  provider = "sqlite"
  url      = "file:./movie.db"
}

model movies {
  url         String  @id
  title       String?
  synopsis    String?
  poster      String?
  
  // KITA COCOKKAN NAMANYA:
  // Di kodingan kita panggil 'video', tapi ambil dari kolom 'stream_link'
  video       String? @map("stream_link")
  
  // Kolom tambahan yang ada di DB lu
  scraped_at  Int?

  // Kolom 'tags' dan 'time' KITA HAPUS karena emang gak ada di tabel ini
  
  @@map("movies")
}

// Model kategori (buat jaga-jaga kalau mau dipake nanti)
model movie_categories {
  url      String
  category String

  @@id([url, category])
  @@map("movie_categories")
}
