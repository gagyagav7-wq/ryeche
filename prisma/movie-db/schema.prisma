generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-movie"
}

datasource db {
  provider = "sqlite"
  url      = "file:./movie.db"
}

model movies {
  url       String  @id @map("url")
  title     String?
  synopsis  String?
  poster    String?
  video     String?
  tags      String?
  time      Int?

  @@map("movies")
}

model movie_categories {
  // PENTING: ID tidak boleh optional (tanpa ?)
  url      String
  category String

  // Ini namanya Composite ID (ID gabungan)
  @@id([url, category])
  @@map("movie_categories")
}

model crawl_errors {
  url   String  @id
  error String?
  
  @@map("crawl_errors")
}
