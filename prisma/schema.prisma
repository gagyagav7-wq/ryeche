generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model movies {
  url        String  @id
  title      String?
  synopsis   String?
  poster     String?
  scraped_at Int?

  @@map("movies")
}

model movie_categories {
  url      String
  category String

  @@id([url, category])
  @@map("movie_categories")
}
